<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.MemberMapper">
    <!-- insertMember 구현 -->
    <insert id="insertMember" parameterType="Member">
        INSERT INTO member (id, name, role)
        VALUES (#{id}, #{name}, #{role})
    </insert>

    <!-- selectById 구현 -->
    <select id="selectMemberById" parameterType="String" resultType="Member">
        SELECT * FROM member WHERE id = #{id}
    </select>

    <!-- selectAll 구현 -->
    <select id="selectAll" resultType="Member">
        SELECT * FROM member
    </select>

    <!-- deleteMember 구현 -->
    <delete id="deleteMember" parameterType="Member">
        DELETE FROM member WHERE id = #{id}
    </delete>

    <!-- updateMember 구현 -->
    <update id="promptMember" parameterType="Member">
        UPDATE member SET name = #{name}, role = #{role} WHERE id = #{id}
    </update>
</mapper>